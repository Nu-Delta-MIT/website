<html>
    <head>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: "Palatino Linotype";
        }

        .divwithimg {
            background-image: url(images/homepage/Mainehouse2017.jpg);
            height: 105%;
            width: 100%;
            background-size: cover;
            position: absolute;
            display: flex;
            white-space: pre;
        }

        .shader {
            background-color: rgba(0, 0, 0, 0.3);
            height: 105%;
            width: 100%;
            position: absolute;
            color: white;
            font-size: 175px;
            text-align: center;
            line-height: 600%;
        }

        .heading {
            position: absolute;
            width: 100%;
            font-size: 25px;
            color: white;
            background-color: rgba(0, 0, 0, 0.5)
        }

        .content {
            height: 300%;
            width: 100%;
            background-color: black;
            color: white;
            transform: translateY(34.9%);
        }

        .presidentimg {
            background-image: url(images/homepage/Fabrice.jpg);
            transform: translateX(10%);
            height: 20%;
            width: 30%;
            background-size: cover;
        }

        .brothersimg {
            background-image: url(images/homepage/Mainehouse2017.jpg);
            width: 80%;
            height: 25%;
            background-size: cover;
            top: 28%;
            left: 10%;
        }
        
        .houseimg{
            z-index: 2;
            background-image: url("images/homepage/Background.png");
            width: 70%;
            height: 25%;
            top: 63%;
            left: 15%;
            background-size: cover;
        }
        
        h1 {
            z-index: 0;
            position: relative;
            font-size: 30px;
            z-index: 0;
            overflow: hidden;
            text-align: center;
        }

        h1:before {
            z-index: 0;
            position: absolute;
            top: 51%;
            overflow: hidden;
            width: 50%;
            height: 5px;
            content: '\a0';
            background-color: rgb(255, 0, 75);
        }

        h1:after {
            z-index: 0;
            position: absolute;
            top: 51%;
            overflow: hidden;
            width: 50%;
            height: 5px;
            content: '\a0';
            background-color: rgb(150, 0, 255);
        }

        h1:before {
            z-index: 0;
            margin-left: -50%;
            text-align: right;
        }

        ::-webkit-scrollbar {
            display: none;
        }
    </style>
</head>

<body>
    <div class="front">
        <div class="divwithimg"></div>
        <div class="shader">
            <p><span style="color: rgb(255,0,50)">Nu Delta</span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span style="color: rgb(150,0,255)">Fraternity</span></p>
        </div>
    </div>

    <div class="heading">
        <div style="position: absolute; padding-left: 10px;">
            <span style="color: rgb(255,0,50)">N</span>
            <span style="color: rgb(150,0,255)">&Delta;</span>
        </div>
        <div style="text-align: center; word-spacing: 50px;">
            <span>Home</span>
